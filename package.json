{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "esbuild": "^0.16.16",
    "govuk-frontend": "4.4.1",
    "sass": "^1.57.1",
    "stimulus": "^3.2.1",
    "workbox-build": "^6.5.4"
  },
  "scripts": {
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps",
    "build": "esbuild app/javascript/*.[jt]s app/javascript/controllers/*.[jt]s --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:serviceworker": "esbuild app/javascript/serviceworker/serviceworker.js --bundle --sourcemap --outfile=public/serviceworker.js"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^3.2.2",
    "eslint": "^8.30.0",
    "prettier": "^2.8.2"
  }
}
