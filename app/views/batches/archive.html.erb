<% content_for :before_main do %>
  <%= govuk_back_link(href: vaccines_path) %>
<% end %>

<% page_title = "Are you sure you want to archive this batch?" %>

<%= h1 page_title do %>
  <span class="nhsuk-caption-l">
    <%= @vaccine.brand %>, <%= @batch.name %>
  </span>
  <%= page_title %>
<% end %>

<p class="nhsuk-body">This operation cannot be undone.</p>

<%= form_with url: archive_vaccine_batch_path(@vaccine, @batch) do |f| %>
  <div class="nhsuk-button-group">
    <%= f.govuk_submit "Yes, archive this batch", warning: true %>
    <%= link_to "No, return to vaccines", vaccines_path %>
  </div>
<% end %>
