<% content_for :before_main do %>
  <%= govuk_back_link(href: imports_path) %>
<% end %>

<% legend = "What type of records are you uploading?" %>
<% content_for :page_title, legend %>

<%= form_with model: @draft_import, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset :type, legend: { text: legend, tag: "h1", size: "l" } do %>
    <%= f.govuk_radio_button :type, :cohort,
                             label: { text: "Child records" },
                             hint: { text: "Records of children from a CHIS, local authority or school, used to create cohorts" },
                             link_errors: true %>

    <%= f.govuk_radio_button :type, :class,
                             label: { text: "Class list records" },
                             hint: { text: "Records of children from a school, used to update cohorts" } %>

    <%= f.govuk_radio_button :type, :immunisation,
                             label: { text: "Vaccination records" },
                             hint: { text: "Records of previous vaccinations to be reported to GPs and/or NHS England" } %>
  <% end %>

  <%= f.govuk_submit %>
<% end %>
