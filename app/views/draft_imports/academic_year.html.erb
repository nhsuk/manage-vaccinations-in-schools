<% content_for :before_main do %>
  <%= render AppBacklinkComponent.new(previous_wizard_path) %>
<% end %>

<% legend = "Which academic year do you want to import these records for?" %>
<% content_for :page_title, legend %>

<%= form_with model: @draft_import, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset :academic_year, legend: { text: legend, tag: "h1", size: "l" } do %>

    <%= f.govuk_radio_button :academic_year,
                             AcademicYear.current,
                             label: { text: format_academic_year(AcademicYear.current) },
                             link_errors: true %>

    <%= f.govuk_radio_button :academic_year,
                             AcademicYear.pending,
                             label: { text: format_academic_year(AcademicYear.pending) } %>
  <% end %>

  <%= f.govuk_submit %>
<% end %>
