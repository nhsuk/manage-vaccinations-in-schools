<% content_for :before_main do %>
  <%= govuk_back_link(href: previous_wizard_path) %>
<% end %>

<% title = "Which school is this class list for?" %>
<% content_for :page_title, title %>

<%= form_with model: @draft_import, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_select :location_id,
                     label: { text: title, size: "l", tag: "h1" },
                     data: { module: "app-autocomplete" } do %>
    <%= tag.option "", value: "" %>

    <% @location_options.each do |location| %>
      <%= tag.option location_display_name(location, show_urn: true),
                     value: location.id,
                     selected: location.id == @draft_import.location_id,
                     data: { hint: format_address_single_line(location) } %>
    <% end %>
  <% end %>

  <%= f.govuk_submit %>
<% end %>
