<% content_for :before_main do %>
  <%= govuk_back_link(href: @back_link_path) %>
<% end %>

<% title = t(@draft_consent.programme.translation_key, scope: "draft_consents.agree.title") %>
<% content_for :page_title, title %>

<%= form_with model: @draft_consent, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_radio_buttons_fieldset(:response,
                                     caption: { size: "l",
                                                text: @patient.full_name },
                                     legend: { size: "l",
                                               tag: "h1",
                                               text: title }) do %>
    <% if @draft_consent.programme.flu? %>
      <%= f.govuk_radio_button :response, "given_nasal",
                               label: { text: t("draft_consents.agree.response.given_nasal") }, link_errors: true do %>
        <%= f.govuk_radio_buttons_fieldset :injection_alternative,
                                           legend: { text: t("draft_consents.agree.injection_alternative.legend"), size: "s" },
                                           hint: { text: t("draft_consents.agree.injection_alternative.hint"), size: "s" } do %>
          <%= f.govuk_radio_button :injection_alternative, "true", label: { text: t("draft_consents.agree.injection_alternative.yes") } %>
          <%= f.govuk_radio_button :injection_alternative, "false", label: { text: t("draft_consents.agree.injection_alternative.no") } %>
        <% end %>
      <% end %>
      <%= f.govuk_radio_button :response, "given_injection",
                               label: { text: t("draft_consents.agree.response.given_injection") } %>
    <% elsif @draft_consent.programme.mmr? %>
      <%= f.govuk_radio_button :response, "given", label: { text: t("draft_consents.agree.response.given") }, link_errors: true do %>
        <%= f.govuk_radio_buttons_fieldset :without_gelatine,
                                           legend: { text: t("draft_consents.agree.without_gelatine.legend"), size: "s" },
                                           hint: {
                                             text: t("draft_consents.agree.without_gelatine.hint",
                                                     programme_name: @draft_consent.programme.name), size: "s",
                                           } do %>
          <%= f.govuk_radio_button :without_gelatine, "true", label: { text: t("draft_consents.agree.without_gelatine.yes") } %>
          <%= f.govuk_radio_button :without_gelatine, "false", label: { text: t("draft_consents.agree.without_gelatine.no") } %>
        <% end %>
      <% end %>
    <% else %>
      <%= f.govuk_radio_button :response, "given",
                               label: { text: t("draft_consents.agree.response.given") }, link_errors: true %>
    <% end %>

    <%= f.govuk_radio_button :response, "refused",
                             label: { text: t("draft_consents.agree.response.refused") } %>

    <% unless @draft_consent.via_self_consent? %>
      <%= f.govuk_radio_divider %>
      <%= f.govuk_radio_button :response, "not_provided",
                               label: { text: t("draft_consents.agree.response.not_provided") } %>
    <% end %>
  <% end %>

  <%= f.govuk_submit "Continue" %>
<% end %>
