<% content_for :before_main do %>
  <%= render AppBacklinkComponent.new(@back_link_path) %>
<% end %>

<% legend = "Does the child want their parent or guardian to get confirmation of the vaccination?" %>
<% content_for :page_title, legend %>

<%= form_with model: @draft_consent, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset :notify_parents_on_vaccination,
                                     caption: { size: "l", text: @patient.full_name },
                                     legend: { size: "l", tag: "h1", text: legend } do %>
    <%= f.govuk_radio_button :notify_parents_on_vaccination, "true",
                             label: { text: "Yes" }, link_errors: true %>
    <%= f.govuk_radio_button :notify_parents_on_vaccination, "false",
                             label: { text: "No" } %>
  <% end %>

  <%= f.govuk_submit "Continue" %>
<% end %>
