<% content_for :before_main do %>
  <%= govuk_back_link(href: session_patient_programme_path(@session, @patient, @patient_session.programmes.first)) %>
<% end %>

<% title = "Is #{@patient.full_name} attending today’s session?" %>
<% content_for :page_title, title %>

<%= form_with model: @attendance_record,
              url: session_patient_attendance_path(@session, @patient),
              method: :put do |f| %>
  <%= f.govuk_error_summary %>
  <%= f.govuk_radio_buttons_fieldset(:attending,
                                     caption: { size: "l",
                                                text: @session.location.name },
                                     legend: { size: "l",
                                               tag: "h1",
                                               text: title }) do %>
    <%= f.govuk_radio_button(
          :attending, true,
          label: { text: "Yes, they are attending today’s session" },
          link_errors: true,
        ) %>
    <%= f.govuk_radio_button(
          :attending, false,
          label: { text: "No, they are absent from today’s session" },
        ) %>
    <%= f.govuk_radio_divider %>
    <%= f.govuk_radio_button(
          :attending, "not_registered",
          label: { text: "They have not been registered yet" },
          checked: @attendance_record.attending.nil?,
        ) %>
  <% end %>

  <%= f.govuk_submit "Save changes" %>
<% end %>
