<% content_for :before_main do %>
  <%= render AppBacklinkComponent.new(
        href: sessions_path,
        name: "school session",
      ) %>
<% end %>

<% title = "Which school is it at?" %>
<% content_for :page_title, title %>

<%= form_with model: @session, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= render DfE::Autocomplete::View.new(
        f,
        attribute_name: :location_id,
        form_field: f.govuk_select(
          :location_id,
          options_for_select(
            dfe_autocomplete_options(@locations),
            f.object.id,
          ),
          label: { text: title, tag: "h1", size: "l" },
        ),
      ) %>

  <%= f.govuk_submit "Continue" %>
<% end %>
