<%= render "imports/header" %>

<%= render AppImportsNavigationComponent.new(active: :issues, team: current_team) %>

<% if @import_issues.any? %>
  <div class="nhsuk-table__panel-with-heading-tab">
    <h3 class="nhsuk-table__heading-tab">
      <%= pluralize(@import_issues.count, "uploaded record") %>
      <%= @import_issues.count == 1 ? "needs" : "need" %> review
    </h3>
    <%= render AppImportReviewIssuesSummaryComponent.new(records: @import_issues, review_screen: false) %>
  </div>
<% else %>
  <p>No issues to review.</p>
<% end %>
