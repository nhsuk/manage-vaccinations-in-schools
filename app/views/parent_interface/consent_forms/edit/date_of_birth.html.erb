<% content_for :before_main do %>
  <%= govuk_back_link(href: backlink_path) %>
<% end %>

<% content_for :page_title, "What is your child’s date of birth?" %>

<%= form_with model: @consent_form, url: wizard_path, method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_date_field :date_of_birth,
                         date_of_birth: true,
                         legend: {
                           tag: "h1",
                           text: "What is your child’s date of birth?",
                           size: "l",
                         },
                         hint: { text: "For example, 27 3 2012" },
                         link_errors: true %>

  <%= f.govuk_submit "Continue" %>
<% end %>
