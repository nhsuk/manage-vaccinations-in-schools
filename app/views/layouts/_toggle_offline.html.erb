<div id="work-offline" class="app-ready-for-offline nhsuk-u-margin-bottom-3">
    <div data-controller="connectivity" class="nhsuk-width-container nhsuk-u-font-weight-bold nhsuk-u-margin-top-1 nhsuk-u-margin-bottom-1">
        <p>
            Connection status:
            <span data-connectivity-target="status"
                  data-testid="online-status">
                Online
            </span>
        </p>

        <div class="nhsuk-grid-row">
            <div class="nhsuk-grid-column-two-thirds">
                <p class="nhsuk-body-s nhsuk-u-margin-bottom-1">
                    <a data-action="connectivity#toggleConnection:prevent"
                       data-testid="switch-online-offline"
                       href="/prepare-offline">Go offline</a>
                </p>
            </div>
        </div>

    </div>
</div>
