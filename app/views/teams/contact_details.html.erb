<%= h1 t("teams.show.title") do %>
  <span class="nhsuk-caption-l"><%= @team.name %></span>
  <%= t("teams.show.title") %>
<% end %>

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-one-quarter">
    <%= render AppTeamNavigationComponent.new(team: @team) %>
  </div>
  <div class="nhsuk-grid-column-three-quarters">
    <%= render AppCardComponent.new do |card| %>
        <% card.with_heading(level: 2) { "Contact details" } %>

        <%= govuk_summary_list do |summary_list|
              summary_list.with_row do |row|
                row.with_key { "Email address" }
                row.with_value { @team.email }
              end
            
              summary_list.with_row do |row|
                row.with_key { "Phone number" }
                row.with_value { format_phone_with_instructions(@team) }
              end
            end %>
    <% end %>
  </div>
</div>