<% content_for :before_main do %>
  <%= govuk_back_link(href: edit_team_school_path(@school)) %>
<% end %>

<% legend = "School name" %>
<% content_for :page_title, legend %>

<%= form_with model: @school, url: edit_name_team_school_path(@school), method: :put do |f| %>
  <% content_for(:before_content) { f.govuk_error_summary } %>

  <%= f.govuk_text_field :name,
                         label: {
                           tag: "h1",
                           text: legend,
                           size: "l",
                         } %>

  <%= f.govuk_submit "Continue" %>
<% end %>
