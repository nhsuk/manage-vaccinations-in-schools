<% content_for :before_main do %>
  <%= govuk_back_link(href: consent_forms_path) %>
<% end %>

<%= h1 "Consent response from #{@consent_form.parent_full_name}" %>

<%= render AppActionListComponent.new do |action_list| %>
  <% action_list.with_item(text: "Match", href: search_consent_form_path(@consent_form)) %>
  <% action_list.with_item(text: "Create new record", href: patient_consent_form_path(@consent_form)) %>
  <% action_list.with_item(text: "Archive", href: archive_consent_form_path(@consent_form)) %>
<% end %>

<%= render AppConsentFormCardComponent.new(@consent_form) %>

<%= render AppParentCardComponent.new(parent_relationship: @consent_form.parent_relationship) %>

<%= render AppCardComponent.new do |card| %>
  <% card.with_heading(level: 2) { "Child" } %>
  <%= render AppChildSummaryComponent.new(@consent_form) %>
<% end %>

<%= render AppHealthAnswersCardComponent.new(@consent_form) %>
