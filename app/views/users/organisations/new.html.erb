<% legend = "Select an organisation" %>

<% content_for :page_title, legend %>

<%= form_with url: users_organisations_path, method: :post do |f| %>
  <%= f.govuk_collection_radio_buttons :organisation_id,
                                       @organisations,
                                       :id,
                                       :name,
                                       :ods_code,
                                       legend: { text: legend, size: "xl", tag: "h1" } %>

  <%= f.govuk_submit %>
<% end %>
