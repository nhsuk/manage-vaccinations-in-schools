<%= h1 t(".title"), size: "xl" %>

<%= render AppPatientSearchFormComponent.new(
      @form,
      url: patients_path,
      heading_level: 2,
      show_aged_out_of_programmes: true,
    ) %>

<% if @patients.any? %>
  <%= render AppPatientTableComponent.new(@patients, current_user:, count: @pagy.count) %>
<% else %>
  <%= render AppCardComponent.new(feature: true) do |card| %>
    <% card.with_heading(level: 2) { "No children" } %>
    <% card.with_description { "No children matching search criteria found." } %>
  <% end %>
<% end %>

<%= render AppPaginationComponent.new(pagy: @pagy) %>

<% if @pagy.count.positive? %>
  <p class="nhsuk-body">
    Showing <b><%= @pagy.from %></b> to <b><%= @pagy.to %></b> of <b><%= @pagy.count %></b> children
  </p>
<% end %>
