<% content_for :before_main do %>
  <%= govuk_back_link(href: edit_ethnic_group_patient_path(@patient)) %>
<% end %>

<% group = @patient.ethnic_group&.to_sym %>
<% group_label = t("ethnicity.groups.#{group}") %>

<% title = t("ethnicity.ethnic_background_title", group_label:, group_key: group) %>
<% content_for :page_title, title %>

<% ethnic_background_options = Patient.ethnic_backgrounds_for_group(group) %>
<% any_other_backgrounds = Patient.any_other_ethnic_backgrounds.map(&:to_s) %>

<%= form_with model: @patient, url: edit_ethnic_background_patient_path(@patient), method: :put do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_radio_buttons_fieldset :ethnic_background, legend: { size: "l", text: title, tag: "h1" } do %>
    <% ethnic_background_options.each_with_index do |background, index| %>
      <% if background == :prefer_not_to_say %>
        <%= f.govuk_radio_divider %>
      <% end %>

      <% if any_other_backgrounds.include?(background.to_s) %>
        <%= f.govuk_radio_button :ethnic_background,
                                 background.to_s,
                                 label: { text: t("ethnicity.backgrounds.#{background}") },
                                 link_errors: index.zero? do %>
          <%= f.govuk_text_field :ethnic_background_other, label: {
                                                             text: "How would you describe your childâ€™s background? (optional)",
                                                           } %>
        <% end %>
      <% else %>
        <%= f.govuk_radio_button :ethnic_background,
                                 background.to_s,
                                 label: { text: t("ethnicity.backgrounds.#{background}") },
                                 link_errors: index.zero? %>
      <% end %>
    <% end %>
  <% end %>

  <%= f.govuk_submit "Continue" %>
<% end %>
