<% content_for :before_main do %>
  <%= govuk_back_link(href: edit_patient_path(@patient)) %>
<% end %>

<% title = t("ethnicity.ethnic_group_title") %>
<% content_for :page_title, title %>

<% ethnic_group_options = Patient.ethnic_backgrounds_by_group.keys %>

<%= form_with model: @patient, url: edit_ethnic_group_patient_path(@patient), method: :put do |f| %>
  <% content_for(:before_content) { f.govuk_error_summary } %>

  <%= f.govuk_radio_buttons_fieldset :ethnic_group, legend: { size: "l", text: title, tag: "h1" } do %>
    <% ethnic_group_options.each_with_index do |group, index| %>
      <%= f.govuk_radio_button :ethnic_group,
                               group.to_s,
                               caption: { text: @patient.full_name, size: "l" },
                               label: { text: t("ethnicity.groups.#{group}") },
                               link_errors: index.zero? %>
    <% end %>
  <% end %>

  <%= f.govuk_submit "Continue" %>
<% end %>
