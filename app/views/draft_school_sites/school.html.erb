

<% content_for :before_main do %>
  <%= govuk_back_link(href: schools_team_path) %>
<% end %>

  <%= h1 "Which school do you want to add a site to?" %>

  <%= form_with(model: @draft_school_site, url: wizard_path, method: :put) do |f| %>
    <%= f.govuk_select :urn,
                       label: {
                         text: "Select a school",
                       },
                       data: { module: "app-autocomplete" } do %>
      <%= tag.option "", value: "" %>
      <% @school_options.each do |school| %>
        <%= tag.option location_display_name(school, show_urn: true),
                       value: school.urn,
                       data: { hint: format_address_single_line(school) } %>
      <% end %>
    <% end %>
    <%= f.govuk_submit "Continue" %>
  <% end %>
