<nav aria-label="Secondary menu" <%= tag.attributes(@attributes) %>>
  <ul class="app-sub-navigation__section">
    <% items.each do |item| %>
      <li class="app-sub-navigation__section-item">
        <%= link_to item.href,
                    class: "app-sub-navigation__link",
                    aria: { current: item.selected || nil },
                    data: { turbo: true, turbo_action: "replace" } do %>
          <% if item.selected %>
            <strong class="app-sub-navigation__section-item--current">
              <%= item %>
            </strong>
          <% else %>
            <%= item %>
          <% end %>
        <% end %>
      </li>
    <% end %>
  </ul>
</nav>

<h2 class="nhsuk-u-visually-hidden">
  <%= selected_item_text %>
</h2>
