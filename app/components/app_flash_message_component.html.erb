<%= govuk_notification_banner(
     classes: classes,
     html_attributes: { role: role },
     title_text: title,
     success: success?,
   ) do |notification_banner| %>
  <% notification_banner.with_heading(
       text: heading.html_safe,
       link_text: heading_link_text,
       link_href: heading_link_href,
     ) if heading.present? %>
  <% if body.present? %>
    <p><%= body.html_safe %></p>
  <% end %>
<% end %>
